{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "release-base",
      "displayName": "Release ‚Ä¢ generic",
      "binaryDir": "${sourceDir}/build/release/${hostSystemName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/vcpkg/triplets"
      },
      "hidden": true
    },
    {
      "name": "debug-base",
      "displayName": "Debug ‚Ä¢ generic",
      "binaryDir": "${sourceDir}/build/debug/${hostSystemName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "BUILD_TESTING": "ON",
        "OXIDE_BUILD_TESTS": "ON",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/vcpkg/triplets"
      },
      "hidden": true
    },

    {
      "name": "release-linux",
      "displayName": "üü¢  Release ‚Ä¢ Linux (lto)",
      "inherits": "release-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux-oxide-lto"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },

    {
      "name": "release-macos",
      "displayName": "üü¢  Release ‚Ä¢ macOS-arm64 (lto)",
      "inherits": "release-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx-oxide-lto"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },

    {
      "name": "release-windows",
      "displayName": "üü¢  Release ‚Ä¢ Windows-x64 (lto)",
      "inherits": "release-base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows-oxide-lto"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },

    {
      "name": "debug-linux",
      "displayName": "üêû  Debug ‚Ä¢ Linux",
      "inherits": "debug-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },

    {
      "name": "debug-macos",
      "displayName": "üêû  Debug ‚Ä¢ macOS-arm64",
      "inherits": "debug-base",
      "generator": "Ninja",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-osx"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },

    {
      "name": "debug-windows",
      "displayName": "üêû  Debug ‚Ä¢ Windows-x64",
      "inherits": "debug-base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    { "name": "release-linux",   "configurePreset": "release-linux"   },
    { "name": "release-macos",   "configurePreset": "release-macos"   },
    { "name": "release-windows", "configurePreset": "release-windows" },

    { "name": "debug-linux",     "configurePreset": "debug-linux"     },
    { "name": "debug-macos",     "configurePreset": "debug-macos"     },
    { "name": "debug-windows",   "configurePreset": "debug-windows"   }
  ]
}
